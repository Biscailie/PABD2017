{% extends 'base.html.twig' %}
{% block title %}Nicu Pocris{% endblock %}
{% block javascripts %} 
	{% javascripts '@UabPocrisBundle/Resources/public/js/*' %}
		<script src="{{asset_url}}"></script>
	{% endjavascripts %}
{% endblock %}
{% block stylesheets %}
{{parent()}}

{% endblock %}
        
{% block body %}
<html>
	<body>
	  
	    <div class="container">
		<div class=row">
			<div class=col-md-12>
				<h1>Welcome to my bundle page</h1>
				<p class="lead">Hello , my name is {{name}}.<br>You can write me a nice e-mail at: {{email}} </p>
			
			</div>
			<div class="col-md-12">
					 	
			{% image '@UabPocrisBundle/Resources/public/img/*' %}
				<img src="{{asset_url}}" alt="nicu pocris picture' width="150" class="center-block img-responsive img-circle" />
			{% endimage %}	
			</div>

			<div class="col-md-12">
		
				<div id="complexify">
					<div classs="form">
						<div class="form-group">
							<label for="password">Below you can check the strength of a password:</label>
							<input type="password" class="form-control" id="password">
						</div>
					</div>
					<div class="progress">
						<div id="complexity-bar" class="progress-bar" role="progressbar">
						</div>
					</div>
					<p>
						<h1 id="complexity" class="pull-right">0%</h1>
					</p>
				</div>
			
			</div>
		  </div>        
	      	
	    </div><!-- /.container -->
          
    </body>
</html>
{% endblock %}

