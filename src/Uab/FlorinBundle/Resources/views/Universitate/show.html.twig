{% extends 'base.html.twig' %}

{% block body %}
    <h1>Universitate</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ universitate.id }}</td>
            </tr>
            <tr>
                <th>Nume</th>
                <td>{{ universitate.nume }}</td>
            </tr>
            <tr>
                <th>Localitate</th>
                <td>{{ universitate.localitate }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
